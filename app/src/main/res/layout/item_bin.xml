<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/binIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#ECFDF5"
                android:padding="8dp"
                android:src="@drawable/ic_recycle"
                app:tint="@color/primary_green" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_toEndOf="@id/binIcon"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/binName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trashbin1"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/binLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="q11"
                    android:textColor="#6B7280"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/binStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@drawable/bg_status_warning"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp"
                android:text="Warning"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Dry Waste Level"
            android:textColor="#374151"
            android:textSize="13sp" />

        <ProgressBar
            android:id="@+id/dryProgressBar"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginTop="4dp"
            android:progress="90"
            android:progressDrawable="@drawable/custom_progress_bar" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Wet Waste Level"
            android:textColor="#374151"
            android:textSize="13sp" />

        <ProgressBar
            android:id="@+id/wetProgressBar"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginTop="4dp"
            android:progress="50"
            android:progressDrawable="@drawable/custom_progress_bar" />

    </LinearLayout>
</androidx.cardview.widget.CardView>